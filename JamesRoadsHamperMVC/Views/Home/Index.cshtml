<div id="carouselSideButtons" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselSideButtons" data-slide-to="0" class="active"></li>
        <li data-target="#carouselSideButtons" data-slide-to="1"></li>
        <li data-target="#carouselSideButtons" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/freddie-collins-424616-unsplash.jpg">
